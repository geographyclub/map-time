{
	"version": 8,
	"name": "map-time",
	"metadata": {
		"maputnik:renderer": "mbgljs"
	},
	"glyphs": "https://geographyclub.github.io/map-time/assets/fonts/{fontstack}/{range}.pbf",
	"sprite": "https://geographyclub.github.io/map-time/assets/sprites/sprites",
	"sources": {
		"osm": {
			"type": "vector",
			"url": "https://vector.openstreetmap.org/shortbread_v1/tilejson.json"
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "hsl(0, 0%, 100%)"
			}
		},
		{
			"source": "osm",
			"id": "sites",
			"type": "fill",
			"source-layer": "sites",
			"paint": {
				"fill-color": "hsl(214, 33%, 95%)"
			}
		},
		{
			"source": "osm",
			"id": "land-man",
			"type": "fill",
			"source-layer": "land",
			"filter": [ "in", "kind", "commercial", "retail", "industrial", "quarry", "railway", "garages", "residential" ],
			"paint": {
				"fill-color": "hsl(45, 55%, 93%)"
			}
		},
		{
			"source": "osm",
			"id": "land-natural",
			"type": "fill",
			"source-layer": "land",
			"filter": [ "in", "kind", "brownfield", "farmland", "farmyard", "greenfield", "greenhouse_horticulture", "orchard", "plant_nursery", "vineyard", "landfill", "park", "village_green", "recreation_ground", "allotments", "garden", "cemetery", "grave_yard", "miniature_golf", "playground", "golf_course", "bare_rock", "scree", "shingle", "forest", "grass", "grassland", "meadow", "wet_meadow", "heath", "scrub", "beach", "sand", "bog", "marsh", "string_bog", "swamp" ],
			"paint": {
				"fill-color": "hsl(110, 60%, 80%)"
			}
		},
		{
			"source": "osm",
			"id": "land-natural-buffer",
			"type": "line",
			"source-layer": "land",
			"filter": [ "in", "kind", "brownfield", "farmland", "farmyard", "greenfield", "greenhouse_horticulture", "orchard", "plant_nursery", "vineyard", "landfill", "park", "village_green", "recreation_ground", "allotments", "garden", "cemetery", "grave_yard", "miniature_golf", "playground", "golf_course", "bare_rock", "scree", "shingle", "forest", "grass", "grassland", "meadow", "wet_meadow", "heath", "scrub", "beach", "sand", "bog", "marsh", "string_bog", "swamp" ],
			"paint": {
				"line-color": "hsl(0, 0%, 0%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 2, 20, 3 ]
			}
		},
		{
			"source": "osm",
			"id": "water-area",
			"type": "fill",
			"source-layer": "water_polygons",
			"filter": [ "in", "kind", "water", "river" ],
			"paint": {
				"fill-color": "hsl(200, 100%, 80%)"
			}
		},
		{
			"source": "osm",
			"id": "highway-service-buffer",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "service" ],
			"paint": {
				"line-color": "hsl(0, 0%, 100%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 15, 20, 128 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "highway-major-buffer",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary", "residential" ],
			"paint": {
				"line-color": "hsl(0, 0%, 100%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 17, 20, 188 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			}
		},
		{
			"source": "osm",
			"id": "highway-service-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "service" ],
			"paint": {
				"line-color": "hsl(0, 0%, 20%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 5, 20, 98 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "highway-major-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary", "residential" ],
			"paint": {
				"line-color": "hsl(0, 0%, 20%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 7, 20, 158 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			}
		},
		{
			"source": "osm",
			"id": "highway-service",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "service" ],
			"paint": {
				"line-color": "hsl(214, 33%, 90%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 92 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "highway-major",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary", "residential" ],
			"paint": {
				"line-color": "hsl(214, 33%, 90%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 152 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			}
		},
		{
			"source": "osm",
			"id": "highway-major-divider",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary", "residential" ],
			"paint": {
				"line-color": "hsl(0, 0%, 100%)",
				"line-dasharray": { "stops": [ [ 16, [2, 2] ], [ 18, [4, 4] ] ] },
				"line-width": { "stops": [ [ 16, 2 ], [ 18, 3 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "transport",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "in", "kind", "monorail", "funicular", "tram", "narrow_gauge", "subway", "light_rail", "rail" ] ],
			"minzoom": 13,
			"paint": {
				"line-width": { "stops": [ [ 12, 0 ], [ 18, 3 ] ] },
				"line-color": "hsl(214, 33%, 90%)"
			}
		},
		{
			"source": "osm",
			"id": "bridge",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "==", "bridge", true ], [ "!=", "kind", "footway" ], [ "!=", "kind", "path" ] ],
			"paint": {
				"line-color": "hsl(0, 0%, 100%)",
				"line-width": 6,
				"line-opacity": 1
			},
			"layout": {
				"line-join": "round",
				"line-cap": "butt"
			}
		},
		{
			"source": "osm",
			"id": "label-street",
			"type": "symbol",
			"source-layer": "street_labels",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary", "residential" ],
			"layout": {
				"text-field": "{name}",
				"text-font": [ "montserrat-black" ],
				"text-transform": "uppercase",
				"symbol-placement": "line",
				"text-anchor": "center",
				"text-size": [ "interpolate", [ "exponential", 1.5 ], [ "zoom" ], 10, 0, 20, 40 ],
				"text-letter-spacing": 0.3,
				"symbol-spacing": 500
			},
			"paint": {
				"text-color": "hsl(0, 0%, 20%)",
				"text-halo-color": "hsl(214, 33%, 90%)",
				"text-halo-width": 2
			}
		},
		{
			"source": "osm",
			"id": "poi-amenity",
			"type": "symbol",
			"source-layer": "pois",
			"filter": [ "to-boolean", [ "get", "amenity" ] ],
			"layout": {
				"icon-size": 1,
				"icon-image": [ "match", [ "get", "amenity" ], "arts_centre", "icon-art_gallery", "atm", "icon-atm", "bank", "icon-bank", "bar", "icon-bar", "bench", "icon-bench", "bicycle_rental", "icon-bicycle_share", "biergarten", "icon-beergarden", "cafe", "icon-cafe", "car_rental", "icon-car_rental", "car_sharing", "icon-car_rental", "car_wash", "icon-car_wash", "cinema", "icon-cinema", "college", "icon-college", "community_centre", "icon-community", "dentist", "icon-dentist", "doctors", "icon-doctor", "dog_park", "icon-dog_park", "drinking_water", "icon-drinking_water", "embassy", "icon-embassy", "fast_food", "icon-fast_food", "fire_station", "icon-fire_station", "fountain", "icon-fountain", "grave_yard", "icon-cemetery", "hospital", "icon-hospital", "hunting_stand", "icon-huntingstand", "library", "icon-library", "marketplace", "icon-marketplace", "nightclub", "icon-nightclub", "nursing_home", "icon-nursinghome", "pharmacy", "icon-pharmacy", "place_of_worship", "icon-place_of_worship", "playground", "icon-playground", "police", "icon-police", "post_box", "icon-postbox", "post_office", "icon-post", "prison", "icon-prison", "pub", "icon-beer", "recycling", "icon-recycling", "restaurant", "icon-restaurant", "school", "icon-school", "shelter", "icon-shelter", "telephone", "icon-telephone", "theatre", "icon-theatre", "toilets", "icon-toilet", "townhall", "icon-town_hall", "vending_machine", "icon-vendingmachine", "veterinary", "icon-veterinary", "waste_basket", "icon-waste_basket", "unknown" ],
				"symbol-placement": "point",
				"text-field": "{name}",
				"text-transform": "uppercase",
				"text-anchor": "top",
				"icon-anchor": "bottom",
				"text-allow-overlap": false,
				"text-font": [ "montserrat-black" ],
				"text-size": 16,
				"text-line-height": 0.9,
				"text-letter-spacing": 0.2,
                "text-max-width": 10
			},
			"paint": {
				"icon-color": "hsl(0, 0%, 20%)",
				"text-color": "hsl(0, 0%, 20%)",
				"text-halo-color": "hsl(0, 0%, 100%)",
				"text-halo-width": 2
			}
		}
	]
}
